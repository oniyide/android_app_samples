<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.programming.revision.SharedPrefs">

    <EditText android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/etSharedPrefs"/>
    <Button android:text="Save" android:id="@+id/bSave"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <Button android:text="Load" android:id="@+id/bLoad"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:text="Load your data" android:id="@+id/tvLoadSharedPrefs"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>


</LinearLayout>
